extends layout
block body-content
    body
        // Main Navigation
        header
            style.
                #intro {
                    background-image: url("/images/zap-mappa-bg.png");
                    height: 100vh;
                }
                /* Height for devices larger than 576px */
                @media (min-width: 992px) {
                    #intro {
                        margin-top: -58.59px;
                    }
                }
                .navbar .nav-link {
                    color: #fff !important;
                }
                
            // Background image
            #intro.bg-image.shadow-2-strong
                .mask(style='background-color: rgba(0, 0, 0, 0.4);')
                    .container.d-flex.align-items-center.justify-content-center.text-center.h-100
                        .text-white
                            h1.mb-3 BrainZap!
                            h5.mb-4 Upbrain you day.
                            a.btn.btn-outline-light.btn-lg.m-2(href='/' role='button') Start New Journey
                            a.btn.btn-outline-light.btn-lg.m-2(href='/' role='button') Continue Existing
